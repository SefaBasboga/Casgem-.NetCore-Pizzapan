@model List<Pizzapan.EntityLayer.Concrete.OurTeam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Personel Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Personel Görev</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OurTeamID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Title</td>
            <td><a href="/Category/DeleteStaff/@item.OurTeamID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateStaff/@item.OurTeamID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>
<td><a href="/Staff/AddStaff" class="btn btn-outline-primary">Yeni Personel Girişi</a></td>


